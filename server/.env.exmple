# Port your server will run on
PORT=5000

# Allowed frontend origins (CORS)
ORIGIN=["http://localhost:3000"]

# JWT settings
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=15d

# Cloudinary config for image uploads
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# MongoDB connection string
DB_URI=your_mongodb_connection_string

# Redis connection URI (e.g., for session or queue)
REDIS_URI=your_redis_connection_string

# Secret used to sign activation tokens
ACTIVATION_SECRET=your_activation_secret

# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password

# Email address shown as sender
FROM_EMAIL=your_email@gmail.com

# Token secrets
ACCESS_TOKEN_SECRET=your_access_token_secret
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRES=number_of_days

# App environment: development | production
NODE_ENV=development
